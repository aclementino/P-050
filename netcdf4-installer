cd ~
apt update
apt install -y build-essential git cmake curl m4 libhdf5-dev libxml2 make zlib1g-dev valgrind nano libgsl-dev htop
apt upgrade -y
mkdir build && cd build
mkdir unidata && cd unidata
git clone https://github.com/Unidata/netcdf-c.git --depth 1
cd netcdf-c
cmake .
make install && make test
cp ~/build/unidata/netcdf-c/examples/C/simple_xy_rd.c /home/ && cp ~/build/unidata/netcdf-c/examples/C/simple_xy.nc /home/
cd /home/
export LD_LIBRARY_PATH=/usr/local/lib/
gcc -o simple_xy_rd simple_xy_rd.c -lnetcdf
\./simple_xy_rd

